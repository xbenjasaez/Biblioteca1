@model IEnumerable<Bibilioteca_prestamos_EVWEB.Models.Prestamo>
@{
    ViewBag.Title = "Index";
}

<h1 class="text-center">Lista de Préstamos</h1>
<div class="mb-2 text-end">
    <a href="/Prestamo/Create/" class="btn btn-primary">Inicia Nuevo Préstamo</a>
</div>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Fecha de Préstamo</th>
                <th>Fecha de Devolución</th>
                <th>Libro</th>
                <th>Usuario</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id_prestamo</td>
                    <td>@item.FechaPres</td>
                    <td>@item.FechaDev</td>
                    <td>@item.Libro.Titulo</td>
                    <td>@item.Usuario.Nombre</td>
                    <td>
                        <a href="/Prestamo/Edit/@item.id_prestamo" class="btn btn-warning">EDITAR</a>
                        <a href="/Prestamo/Delete/@item.id_prestamo" class="btn btn-danger">ELIMINAR</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


