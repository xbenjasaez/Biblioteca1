@model Bibilioteca_prestamos_EVWEB.Models.TipoUsuario
@{
    ViewBag.Title = "Edit";
}

<h1 class="text-center">Editar Tipo de Usuario</h1>
<form method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <input type="hidden" name="id_tipo" value="@Model.id_tipo" />
        <label class="form-label">Nombre del Tipo de Usuario</label>
        <input type="text" id="Nombre" name="Nombre" value="@Model.Nombre" class="form-control" required />
    </div>
    <div>
        <a href="/TipoUsuario/Index" class="btn btn-primary">VOLVER</a>
        <button type="submit" class="btn btn-success">EDITAR</button>
    </div>
</form>
<script src="~/Scripts/validacion.js"></script>
