@model Bibilioteca_prestamos_EVWEB.Models.Libro
@{
    ViewBag.Title = "Edit";
}

<h2 class="text-center">Editar Libro: @Model.Titulo</h2>

<form method="post" class="needs-validation" novalidate>

    <input type="hidden" name="id_Libro" value="@Model.id_Libro" />
    <div class="mb-3">
        <label class="form-label">Título</label>
        <input type="text" name="Titulo" class="form-control" value="@Model.Titulo" required />
    </div>
    <div class="mb-3">
        <label class="form-label">ISBN</label>
        <input type="text" name="ISBN" class="form-control" value="@Model.ISBN" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Editorial</label>
        @Html.DropDownList("id_Editorial", null, "--Seleccione--",
       htmlAttributes: new { @class = "form-control", @required = true })
    </div>
    <div class="mb-3">
        <label class="form-label">Autor</label>
        @Html.DropDownList("id_Autor", null, "--Seleccione--",
       htmlAttributes: new { @class = "form-control", @required = true })
    </div>

    <div class="mb-3 text-end">
        <a href="/libro/Index" class="btn btn-outline-primary">VOLVER</a>
        <input type="submit" value="GUARDAR" class="btn btn-success" />
    </div>
</form>
<script src="~/Scripts/validacion.js"></script>
