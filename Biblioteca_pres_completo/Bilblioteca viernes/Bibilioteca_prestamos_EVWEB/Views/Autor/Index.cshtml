@model IEnumerable<Bibilioteca_prestamos_EVWEB.Models.Autor>

@{
    ViewBag.Title = "Index";
}

<h1 class="text-center">Lista de Autores</h1>
<div class="mb-2 text-end">
    <a href="/Autor/Create/" class="btn btn-primary">Crear Nuevo Autor</a>
</div>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nombre Autor</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id_Autor</td>
                    <td>@item.Nombre</td>
                    <td>
                        <a href="/Autor/Edit/@item.id_Autor" class="btn btn-warning">EDITAR</a>
                        <a href="/Autor/Delete/@item.id_Autor" class="btn btn-danger">ELIMINAR</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

